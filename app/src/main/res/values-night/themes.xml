<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.elbanquito" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_primary_color</item>
        <item name="colorPrimaryVariant">@color/dark_primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_color</item>
        <item name="colorSecondaryVariant">@color/accent_color_2</item>
        <item name="colorOnSecondary">@color/light_cream</item>

        <!-- Asignar colores dinámicos para el tema oscuro -->
        <item name="android:colorBackground">@color/background_color_dark</item>
        <item name="android:windowBackground">@color/background_color_dark</item>

        <!-- Status bar color estilo PRO para modo oscuro. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:navigationBarColor">@color/background_color_dark</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>

        <item name="divider_color">@color/divider_color</item>



        <!-- Colores de error para modo oscuro -->
        <item name="colorError">@color/error_background_dark</item>
        <item name="colorOnError">@color/error_text_dark</item>
        <item name="alertDialogTheme">@style/PRODialog</item>

        <!-- Colores de texto -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        <item name="android:textColorHint">@color/hintTextColorDark</item>

        <!-- Cambiar la fuente de toda la aplicación a Inter (similar a SF Pro) -->
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="fontFamily">@font/inter_regular</item>

        <!-- Personalizar los diálogos al estilo PRO -->
        <item name="materialAlertDialogTheme">@style/PROAlertDialog.Dark</item>

        <!-- Color para los botones de diálogo -->
        <item name="buttonBarButtonStyle">@style/CustomDialogButtonStyle.Dark</item>

        <!-- Definir colores globales para el tema -->
        <item name="background_color">@color/background_color_dark</item>
        <item name="card_background">@color/card_background_dark</item>
        <item name="text_primary">@color/text_primary_dark</item>
        <item name="text_secondary">@color/text_secondary_dark</item>

        <!-- Configuraciones adicionales estilo PRO -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>

        <!-- Personalización de widgets para modo oscuro -->
        <item name="materialCardViewStyle">@style/PROCardStyle.Dark</item>
        <item name="floatingActionButtonStyle">@style/PROFabStyle.Dark</item>
        <item name="textInputStyle">@style/PROTextInputStyle.Dark</item>

        <!-- Animaciones predeterminadas -->
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>

        <!-- Menú overflow y popup -->
        <item name="actionOverflowMenuStyle">@style/PopupMenuStyle.Dark</item>
        <item name="actionMenuTextColor">@color/text_primary_dark</item>
        <item name="popupMenuStyle">@style/PopupMenuStyle.Dark</item>
    </style>

    <!-- Estilo de color para los botones de diálogo en modo oscuro -->
    <style name="CustomDialogButtonStyle.Dark" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/light_cream</item>
    </style>

    <!-- Nuevo estilo para diálogos al estilo PRO (tema oscuro) -->
    <style name="PROAlertDialog.Dark" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/DialogShapeAppearance</item>
        <item name="android:background">@drawable/dialog_background_dark</item>
        <item name="buttonBarPositiveButtonStyle">@style/PROPositiveButton.Dark</item>
        <item name="buttonBarNegativeButtonStyle">@style/PRONegativeButton.Dark</item>
        <item name="buttonBarNeutralButtonStyle">@style/PRONeutralButton.Dark</item>
        <item name="android:windowAnimationStyle">@style/PRODialogAnimation</item>
    </style>

    <style name="PROPositiveButton.Dark" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="PRONegativeButton.Dark" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/text_secondary_dark</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="PRONeutralButton.Dark" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Estilo para cards en modo oscuro -->
    <style name="PROCardStyle.Dark" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/card_background_dark</item>
    </style>

    <!-- Estilo para FAB en modo oscuro -->
    <style name="PROFabStyle.Dark" parent="Widget.Design.FloatingActionButton">
        <item name="backgroundTint">@color/blue</item>
        <item name="tint">@color/white</item>
        <item name="fabSize">normal</item>
        <item name="elevation">6dp</item>
        <item name="borderWidth">0dp</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <!-- Estilo para TextInputLayout en modo oscuro -->
    <style name="PROTextInputStyle.Dark" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/text_secondary_dark</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColorHint">@color/text_secondary_dark</item>
    </style>

    <!-- Estilo para menú popup en modo oscuro -->
    <style name="PopupMenuStyle.Dark" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/card_background_dark</item>
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>

    <!-- Tema para Splash Screen estilo PRO (modo oscuro) -->
    <style name="Theme.elbanquito.SplashScreen.Dark" parent="Theme.elbanquito.NoActionBar">
        <item name="android:windowBackground">@color/background_color_dark</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

</resources>