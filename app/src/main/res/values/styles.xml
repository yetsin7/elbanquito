<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:popupBackground">@drawable/spinner_dropdown_background</item>
        <item name="android:dropDownSelector">@drawable/spinner_dropdown_selector</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Estilo para el título de la barra de herramientas -->
    <style name="ToolbarTitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Estilo para el texto del drawer de navegación -->
    <style name="NavigationDrawerText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Estilo para la forma de los items del navigation drawer -->
    <style name="NavigationItemShape" parent="">
        <item name="cornerSize">12dp</item>
    </style>

    <style name="SpinnerItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/spinner_item_dropdown_text_color</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:background">@drawable/spinner_dropdown_selector</item>
    </style>

    <!-- Estilo para el menú popup de opciones -->
    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">?attr/card_background</item>
        <item name="android:textColor">?attr/text_primary</item>
    </style>

    <!-- Estilo para los ítems del menú popup -->
    <style name="PopupMenuItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">?attr/text_primary</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- Estilos para el AppBar estilo PRO -->
    <style name="TextAppearance.App.CollapsingToolbar.Expanded" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textSize">34sp</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Collapsed" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Estilo para botones estilo PRO -->
    <style name="PROButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="elevation">0dp</item>
    </style>

    <!-- Estilo para cards estilo PRO -->
    <style name="PROCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>

    <!-- Estilo para texto de sección estilo PRO -->
    <style name="PROSectionTitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Estilo base para diálogos al estilo PRO -->
    <style name="PRODialogBase" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:padding">0dp</item>
    </style>

    <!-- Diálogo normal al estilo PRO -->
    <style name="PRODialog" parent="PRODialogBase">
        <item name="android:background">@drawable/dialog_background</item>
        <item name="android:textColor">?attr/text_primary</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="buttonBarPositiveButtonStyle">@style/PROPositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/PRONegativeButtonStyle</item>
    </style>

    <!-- Estilo de botón positivo para diálogo normal -->
    <style name="PROPositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <!-- Estilo de botón negativo para diálogo normal -->
    <style name="PRONegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/text_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:minWidth">64dp</item>
    </style>

    <!-- Diálogo de advertencia al estilo PRO -->
    <style name="PROWarningDialog" parent="PRODialogBase">
        <item name="android:background">@drawable/dialog_warning_background</item>
        <item name="android:textColor">?attr/colorOnError</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="buttonBarPositiveButtonStyle">@style/PROWarningPositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/PROWarningNegativeButtonStyle</item>
    </style>

    <!-- Estilo de botón positivo para diálogo de advertencia -->
    <style name="PROWarningPositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:minWidth">64dp</item>
    </style>

    <!-- Estilo de botón negativo para diálogo de advertencia -->
    <style name="PROWarningNegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="android:alpha">0.9</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:minWidth">64dp</item>
    </style>

    <!-- Estilo para diálogo de eliminación de copia de seguridad -->
    <style name="DialogoEliminarHistorial" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:background">@drawable/dialog_eliminar_historial</item>
        <item name="android:textColorPrimary">?attr/text_primary</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="buttonBarPositiveButtonStyle">@style/BotonEliminarHistorial</item>
        <item name="buttonBarNegativeButtonStyle">@style/BotonCancelarHistorial</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>

    <style name="BotonEliminarHistorial" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:minWidth">64dp</item>
    </style>

    <style name="BotonCancelarHistorial" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/text_secondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:minWidth">64dp</item>
    </style>

    <!-- Estilo para diálogo de eliminación de base de datos -->
    <style name="DialogoEliminarDatabase" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:background">@drawable/dialog_eliminar_database</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="buttonBarPositiveButtonStyle">@style/BotonEliminarDatabase</item>
        <item name="buttonBarNegativeButtonStyle">@style/BotonCancelarDatabase</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>

    <style name="BotonEliminarDatabase" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:minWidth">64dp</item>
    </style>

    <style name="BotonCancelarDatabase" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="android:alpha">0.9</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:minWidth">64dp</item>
    </style>

    <!-- Estilo para el diálogo de seleccionar cliente -->
    <style name="DialogoSeleccionarCliente" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:background">@drawable/dialog_warning_background</item>
        <item name="android:textColorPrimary">?attr/text_primary</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="buttonBarPositiveButtonStyle">@style/BotonSeleccionarCliente</item>
        <item name="buttonBarNegativeButtonStyle">@style/BotonCancelarCliente</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>

    <style name="BotonSeleccionarCliente" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:minWidth">64dp</item>
    </style>

    <style name="BotonCancelarCliente" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/text_secondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:minWidth">64dp</item>
    </style>

    <!-- NUEVOS ESTILOS PARA EL DISEÑO PRO -->

    <!-- Estilo para FAB estilo PRO -->
    <style name="PROFabStyle" parent="Widget.Design.FloatingActionButton">
        <item name="backgroundTint">@color/blue</item>
        <item name="tint">@color/white</item>
        <item name="fabSize">normal</item>
        <item name="elevation">6dp</item>
        <item name="borderWidth">0dp</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <!-- Estilo para texto del dashboard estilo PRO -->
    <style name="PRODashboardTitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="PRODashboardSubtitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textColor">#B3FFFFFF</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <!-- Estilo para lista estilo PRO -->
    <style name="PROListItem" parent="">
        <item name="android:paddingVertical">12dp</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- Estilo para indicadores de actividad -->
    <style name="PROActivityIndicator" parent="">
        <item name="android:width">40dp</item>
        <item name="android:height">40dp</item>
    </style>

    <!-- Estilo para badges/contadores -->
    <style name="PROBadge" parent="">
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:minWidth">24dp</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Estilo para separadores de lista -->
    <style name="PROListDivider" parent="">
        <item name="android:height">0.5dp</item>
        <item name="android:background">@color/divider_color</item>
        <item name="android:layout_marginStart">76dp</item>
    </style>

    <!-- Estilo para iconos en círculos de colores -->
    <style name="PROIconCircle" parent="">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">0dp</item>
        <item name="contentPadding">8dp</item>
    </style>

    <!-- Estilo para texto de acciones rápidas -->
    <style name="PROQuickActionText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Estilo para el gráfico -->
    <style name="PROChartStyle" parent="">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">0dp</item>
    </style>

    <!-- Estilo para animaciones estilo PRO -->
    <style name="PROAnimation" parent="">
        <item name="android:duration">300</item>
        <item name="android:interpolator">@android:interpolator/accelerate_decelerate</item>
    </style>

</resources>