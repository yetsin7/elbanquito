<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.elbanquito" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_color</item>
        <item name="colorSecondaryVariant">@color/accent_color_2</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Asignar colores dinámicos para el tema claro -->
        <item name="android:colorBackground">@color/background_color_light</item>
        <item name="android:windowBackground">@color/background_color_light</item>

        <item name="divider_color">@color/divider_color</item>


        <!-- Colores de texto -->
        <item name="android:textColorPrimary">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_secondary_light</item>
        <item name="android:textColorHint">@color/hintTextColorLight</item>

        <!-- Status bar color estilo PRO. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:navigationBarColor">@color/background_color_light</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <!-- Cambiar la fuente de toda la aplicación a Inter (similar a SF Pro) -->
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="fontFamily">@font/inter_regular</item>

        <!-- Personalizar los diálogos al estilo PRO -->
        <item name="materialAlertDialogTheme">@style/PROAlertDialog.Light</item>

        <!-- Color para los botones de diálogo -->
        <item name="buttonBarButtonStyle">@style/CustomDialogButtonStyle</item>

        <!-- Definir colores globales para el tema -->
        <item name="background_color">@color/background_color_light</item>
        <item name="card_background">@color/card_background_light</item>
        <item name="text_primary">@color/text_primary_light</item>
        <item name="text_secondary">@color/text_secondary_light</item>

        <item name="actionOverflowMenuStyle">@style/PopupMenuStyle</item>
        <item name="actionMenuTextColor">?attr/text_primary</item>
        <item name="popupMenuStyle">@style/PopupMenuStyle</item>
        <item name="actionButtonStyle">@style/Widget.AppCompat.ActionButton</item>

        <!-- Colores de error -->
        <item name="colorError">@color/error_background_light</item>
        <item name="colorOnError">@color/error_text_light</item>
        <item name="alertDialogTheme">@style/PRODialog</item>

        <!-- Configuraciones adicionales estilo PRO -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>

        <!-- Personalización de widgets -->
        <item name="materialCardViewStyle">@style/PROCardStyle</item>
        <item name="floatingActionButtonStyle">@style/PROFabStyle</item>
        <item name="textInputStyle">@style/PROTextInputStyle</item>

        <!-- Animaciones predeterminadas -->
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>

    </style>

    <!-- Estilo de color para los botones de Confirmar Eliminar Base de Datos. -->
    <style name="CustomDialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="Theme.elbanquito.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.elbanquito.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.elbanquito.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Nuevo estilo para diálogos al estilo PRO (tema claro) -->
    <style name="PROAlertDialog.Light" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/DialogShapeAppearance</item>
        <item name="android:background">@drawable/dialog_background</item>
        <item name="buttonBarPositiveButtonStyle">@style/PROPositiveButton.Light</item>
        <item name="buttonBarNegativeButtonStyle">@style/PRONegativeButton.Light</item>
        <item name="buttonBarNeutralButtonStyle">@style/PRONeutralButton.Light</item>
        <item name="android:windowAnimationStyle">@style/PRODialogAnimation</item>
    </style>

    <style name="DialogShapeAppearance">
        <item name="cornerSize">20dp</item>
    </style>

    <style name="PROPositiveButton.Light" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="PRONegativeButton.Light" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/text_secondary_light</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="PRONeutralButton.Light" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Animaciones para diálogos -->
    <style name="PRODialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <!-- Estilo para TextInputLayout estilo PRO -->
    <style name="PROTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/gray</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <!-- Tema para Splash Screen estilo PRO -->
    <style name="Theme.elbanquito.SplashScreen" parent="Theme.elbanquito.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

</resources>