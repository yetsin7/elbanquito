<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fondo rojo con esquinas redondeadas -->
    <item>
        <shape>
            <solid android:color="@color/color_atrasado" />
            <corners
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp"
                android:bottomLeftRadius="20dp"
                android:bottomRightRadius="20dp" />
        </shape>
    </item>

    <!-- Fondo blanco con esquinas redondeadas (excepto la superior derecha) -->
    <item
        android:top="50dp"> <!-- Ajusta este valor para cambiar la altura del color rojo -->
        <shape>
            <solid android:color="#FFFFFF" />
            <corners
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp"
                android:bottomLeftRadius="20dp"
                android:bottomRightRadius="20dp" />
        </shape>
    </item>

</layer-list>
