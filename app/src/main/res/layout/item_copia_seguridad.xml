<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="?attr/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_backup"
            app:tint="@color/accent_color" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <TextView
                android:id="@+id/textViewFechaCopia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="01/01/2024 12:00"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="?attr/text_primary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewTamanoCopia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2.5 MB"
                android:fontFamily="@font/montserrat"
                android:textColor="?attr/text_secondary"
                android:textSize="12sp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnRestaurarCopia"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_restore"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/accent_color"
            android:contentDescription="Restaurar copia" />

        <ImageButton
            android:id="@+id/btnEliminarCopia"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/error_color"
            android:layout_marginStart="8dp"
            android:contentDescription="Eliminar copia" />
    </LinearLayout>
</androidx.cardview.widget.CardView>