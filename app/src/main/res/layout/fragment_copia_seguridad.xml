<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background_color"
    tools:context=".ui.configuracion.CopiaSeguridadFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Información de la última copia -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="?attr/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_backup"
                        app:tint="@color/success_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Última copia"
                        android:textSize="16sp"
                        android:textColor="?attr/text_primary"
                        android:fontFamily="@font/montserrat_medium"
                        android:layout_marginStart="12dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:id="@+id/textViewUltimaCopiaFecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nunca"
                        android:textSize="14sp"
                        android:textColor="?attr/text_primary"
                        android:fontFamily="@font/montserrat_medium"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:id="@+id/textViewTamanoTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tamaño total: 0 MB"
                        android:textSize="14sp"
                        android:textColor="?attr/text_secondary"
                        android:fontFamily="@font/montserrat"/>

                    <TextView
                        android:id="@+id/textViewCantidadArchivos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Archivos: 0 archivos"
                        android:textSize="14sp"
                        android:textColor="?attr/text_secondary"
                        android:fontFamily="@font/montserrat"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <!-- Botón para realizar copia -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRealizarCopia"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:text="Realizar copia ahora"
                    android:textSize="14sp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textAllCaps="false"
                    app:cornerRadius="8dp"
                    android:layout_marginTop="8dp"
                    app:backgroundTint="@color/accent_color"/>

                <!-- Botón para restaurar copia -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRestaurarCopia"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:text="Restaurar copia de seguridad"
                    android:textSize="14sp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textAllCaps="false"
                    app:cornerRadius="8dp"
                    android:layout_marginTop="8dp"
                    app:backgroundTint="@color/charcoal"
                    app:strokeColor="@color/card_background_dark"
                    app:strokeWidth="1dp"/>

            </LinearLayout>


            <!-- Botón para cambiar ubicación -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCambiarUbicacionBackup"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:text="Cambiar ubicación de copias"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_medium"
                android:textAllCaps="false"
                app:cornerRadius="8dp"
                android:layout_marginTop="8dp"
                app:backgroundTint="@color/charcoal"
                app:strokeColor="@color/card_background_dark"
                app:strokeWidth="1dp"/>





            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Resto del layout permanece igual -->
        <!-- Configuración adicional -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONFIGURACIÓN"
            android:textColor="?attr/text_secondary"
            android:textSize="12sp"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="4dp"/>

        <!-- Opción: Copia automática -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="?attr/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_sync"
                    app:tint="@color/accent_color_2" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="Copia automática"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="?attr/text_primary"
                    android:textSize="16sp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchCopiaAutomatica"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Opción: Frecuencia de copia -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardFrecuencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="?attr/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="@color/accent_color" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Frecuencia"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="?attr/text_primary"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textViewFrecuenciaSeleccionada"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Diaria"
                        android:fontFamily="@font/montserrat"
                        android:textColor="?attr/text_secondary"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="@color/text_secondary" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Historial de copias -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HISTORIAL DE COPIAS"
            android:textColor="?attr/text_secondary"
            android:textSize="12sp"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="4dp"/>

        <!-- Lista de copias de seguridad -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewCopias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:nestedScrollingEnabled="false"/>

        <!-- Mensaje de no hay copias -->
        <TextView
            android:id="@+id/textViewNoCopias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No hay copias de seguridad disponibles"
            android:textColor="?attr/text_secondary"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>
</ScrollView>