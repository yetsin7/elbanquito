<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="?attr/card_background"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Encabezado con número de préstamo y estado -->
        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Número de préstamo -->
            <TextView
                android:id="@+id/textViewNumeroPrestamo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="001"
                android:textColor="?attr/text_primary"
                android:textSize="16sp"
                android:fontFamily="@font/inter_semibold" />

            <!-- Indicador de estado -->
            <View
                android:id="@+id/indicatorStatus"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/indicador_activo" />
        </LinearLayout>

        <!-- Fecha final con estilo de etiqueta pills -->
        <TextView
            android:id="@+id/textViewFechaFinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="03/02/2024"
            android:textColor="@color/red"
            android:textSize="13sp"
            android:fontFamily="@font/inter_medium"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:background="@drawable/date_late_pill_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/headerLayout"
            app:layout_constraintBottom_toBottomOf="@+id/headerLayout" />

        <!-- Información del cliente -->
        <androidx.cardview.widget.CardView
            android:id="@+id/clientCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="?attr/background_color"
            app:cardCornerRadius="14dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/headerLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp">

                <!-- Avatar del cliente -->
                <View
                    android:id="@+id/clientAvatar"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/circulo_azul" />

                <!-- Iniciales del cliente -->
                <TextView
                    android:id="@+id/textViewIniciales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JP"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/inter_semibold"
                    android:layout_marginStart="-30dp"
                    android:layout_marginEnd="12dp"
                    android:layout_gravity="center" />

                <!-- Información del cliente -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <!-- Nombre y apellido juntos -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewNombreCliente"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Juan"
                            android:textColor="?attr/text_primary"
                            android:textSize="16sp"
                            android:fontFamily="@font/inter_bold"/>

                        <TextView
                            android:id="@+id/textViewApellidoCliente"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="Pérez"
                            android:textColor="?attr/text_primary"
                            android:textSize="16sp"
                            android:fontFamily="@font/inter_bold" />
                    </LinearLayout>

                    <!-- Monto del préstamo -->
                    <TextView
                        android:id="@+id/textViewMontoPrestamo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="C$ 10,000.00"
                        android:textColor="?attr/text_secondary"
                        android:textSize="14sp"
                        android:fontFamily="@font/inter_medium"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Etiqueta de interés en forma de pill -->
        <TextView
            android:id="@+id/textViewInteresPrestamo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10% mensual"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:fontFamily="@font/inter_medium"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/interest_pill_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clientCard" />

        <!-- Botón de acción (con icono dinámico) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPagarCuota"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Pagar ahora"
            android:textColor="@color/white"
            android:fontFamily="@font/inter_semibold"
            android:textSize="14sp"
            android:letterSpacing="0"
            android:paddingHorizontal="16dp"
            app:cornerRadius="20dp"
            app:backgroundTint="@color/red"
            app:icon="@drawable/ic_payment"
            app:iconTint="@color/white"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconSize="18dp"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clientCard" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>